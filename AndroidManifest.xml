<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="net.teknoraver.ics"
	android:installLocation="auto" android:versionName="1.5.1" android:versionCode="17">
	<supports-screens
		android:smallScreens="true"
		android:normalScreens="true"
		android:largeScreens="true"
		android:anyDensity="true"
		android:xlargeScreens="true"/>
	<uses-sdk android:minSdkVersion="4" />
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    	<application android:icon="@drawable/icon" android:label="@string/app_name" android:hardwareAccelerated="true">
		<activity android:name=".Main"
			android:label="@string/app_name"
			android:configChanges="orientation|keyboardHidden">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity android:name=".ICS"
			android:screenOrientation="landscape"
			android:label="@string/app_name"
			android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen"/>
		<activity android:name="com.google.ads.AdActivity" android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
	</application>
</manifest>
